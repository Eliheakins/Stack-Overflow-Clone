<% content_for :title, "Tags" %>

<h1>Tags</h1>

<table id="tags">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Description</th>
      <th>Posts</th>
    </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr>
    <% if tag.name!= "" %>
    <td> <%= tag.name %>
    <td> <%= tag.description %>
    <td>
      <%= link_to "Show this tag", tag_path(tag),class: "btn btn-primary"%>
    </td>
    <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="text-center mt-4">
<%= link_to "New tag", new_tag_path, class: 'btn btn-primary'%>
