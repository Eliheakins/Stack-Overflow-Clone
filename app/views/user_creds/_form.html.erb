<div class="card shadow-sm">
  <div class="card-body">
    <%= form_with(model: user_cred, url: user_user_creds_path) do |form| %>
        <% if user_cred.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(tag.errors.count, "error") %> prohibited this user credential request from being saved:</h2>
      
            <ul>
              <% user_cred.errors.each do |error| %>
