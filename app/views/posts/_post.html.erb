<div id="<%= dom_id post %>">
  <div class="post-container">
    <article class="post">
      <h2><%= post.title %></h2>
      <p class="post-content"><%= post.text %></p>
      <p class="post-author">Posted by <%= post.user.firstname %> <%= post.user.lastname %> on <%= post.created_at.strftime("%B %d, %Y") %></p>
    </article>
  </div>
</div>
