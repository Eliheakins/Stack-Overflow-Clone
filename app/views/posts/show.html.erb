<p style="color: green"><%= notice %></p>

<%= render @post %>
<div class="button-row">
  <% if @post.check_user_authorized(current_user) %>
    <%= link_to "Edit this post", edit_post_path(@post), class: "button edit-button" %>
  <% end %>
  <%= link_to "Back to posts", posts_path, class: "button back-button" %>
  <% if @post.check_user_authorized(current_user) %>
    <%= button_to "Destroy this post", @post, method: :delete, class: "button delete-button"%>
  <% end %>
</div>
<section class="replies">
  <h3>Replies</h3>
  <% @post.replies.order(:created_at).each do |reply| %>
    <%=render reply%>
    <div class="button-row">
      <%= link_to "View this reply", reply, class: "view-reply-button" %>
      <% if reply.check_user_authorized(current_user) %>
        <%= link_to "Edit this reply", edit_reply_path(reply), class: "button edit-button"%>
      <% end %>
    </div>
  <% end %>
</section>
<div class= "button-row">
  <%= link_to "New reply", new_reply_path(@post), class: "button reply-button" %>
</div>
