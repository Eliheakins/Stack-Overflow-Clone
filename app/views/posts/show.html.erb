<p style="color: green"><%= notice %></p>

<%= render @post %>

<section class="replies">
  <h3>Replies</h3>
  <% @post.replies.order(:created_at).each do |reply| %>
    <div class="reply">
      <p class="reply-content"><%= reply.text %></p>
      <p class="reply-author">Replied by <%= reply.user.lastname %>, <%= reply.user.firstname %> on <%= reply.created_at.strftime("%B %d, %Y") %></p>
    </div>
  <% end %>
</section>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %>

  <%= button_to "Destroy this post", @post, method: :delete, class: "custom-button"%>
  <%= link_to "New reply", new_reply_path(@post), class: "custom-button" %>
</div>
